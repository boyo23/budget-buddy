generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  email     String   @unique
  threshold Float    @default(10000.00)
  role      String   @default("USER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  categories Category[]
  expenses   Expense[]
  goals      Goal[]
}

model Category {
  id     String @id @default(uuid())
  name   String @unique
  userId String

  User     User      @relation(fields: [userId], references: [id])
  expenses Expense[]
}

model Expense {
  id            String   @id @default(uuid())
  name          String
  price         Float
  quantity      Int
  date          DateTime
  paymentMethod String
  userId        String
  categoryId    String

  User     User     @relation(fields: [userId], references: [id])
  Category Category @relation(fields: [categoryId], references: [id])
}

model Goal {
  id         String   @id @default(uuid())
  name       String   @unique
  amount     Float
  addedAt    DateTime @default(now())
  targetedAt DateTime
  userId     String

  User    User      @relation(fields: [userId], references: [id])
  savings Savings[]
}

model Savings {
  id     String   @id @default(uuid())
  amount Float
  date   DateTime
  goalId String

  Goal Goal @relation(fields: [goalId], references: [id])
}
